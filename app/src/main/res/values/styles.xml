<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_marginLeft">5pt</item>
        <item name="android:layout_marginRight">5pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:listDivider</item>
    </style>

    <style name="ContactNameSize">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AlertDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
    </style>

    <style name="AlertDialogPositiveButton">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorCombination5</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AlertDialogNegativeButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorCombination5</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
