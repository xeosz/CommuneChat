<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/text_message_body_from_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_rectangle"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hello, hell1231232132132132132323213213o!"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_message_body_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_time_from_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        android:text="11:40"
        android:textSize="@dimen/text_message_time_size"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body_from_me"
        app:layout_constraintRight_toLeftOf="@+id/text_message_body_from_me" />

</android.support.constraint.ConstraintLayout>