<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <my.edu.tarc.kusm_wa14student.communechat.components.CircleImageView
        android:id="@+id/image_profile_photo_to_me"
        android:layout_width="@dimen/small_icon"
        android:layout_height="@dimen/small_icon"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_person"
        app:civ_fill_color="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_name_to_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/text_message_name_size"
        app:layout_constraintLeft_toRightOf="@+id/image_profile_photo_to_me"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_body_to_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@drawable/rounded_rectangle"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hi man, how are you? asdasdasdadasdasdasdasdasdsadasdasdasdasd"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_message_body_size"
        app:layout_constraintLeft_toRightOf="@+id/image_profile_photo_to_me"
        app:layout_constraintTop_toBottomOf="@+id/text_message_name_to_me" />

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="11:40"
        android:textSize="@dimen/text_message_time_size"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body_to_me"
        app:layout_constraintLeft_toRightOf="@+id/text_message_body_to_me" />

</android.support.constraint.ConstraintLayout>