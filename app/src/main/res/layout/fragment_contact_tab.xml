<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="my.edu.tarc.kusm_wa14student.communechat.fragments.ContactTabFragment">

    <ProgressBar
        android:id="@+id/progressBar_contact_fragment"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_contact_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="?android:listPreferredItemHeightSmall"
        android:visibility="invisible"/>

    <ListView
        android:id="@+id/listView_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
